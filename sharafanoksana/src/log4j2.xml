        <File name="file2" fileName="logs/log4j/log2.log">
            <MarkerFilter marker="consoleonly" onMatch="DENY" onMismatch="ACCEPT"/>
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m %ex%n</Pattern>
            </PatternLayout>
        </File>

        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout pattern="%m%n"/>
        </Console>

        <JDBC name="db" tableName="logdb">
            <DataSource
                    jndiName="C:\Users\sharafan\IdeaProjects\java_stc_20\sharafanoksana\src\lesson15\DataBaseTables\LogsDaoJdbc.java"/>
            <DriverManager connectoinString="jdbc:postgresql://127.0.0.1:5432/logdb"
                           driverClassName="org.postgresql.Driver"
                           username="postgres"
                           password="postgres"/>
            <!--                <Column name="ID" pattern="%u" isUnicode="false"/>-->
            <Column name="DATE_LOG" isEventTimestamp="true" isUnicode="false"/>
            <Column name="LOG_LEVEL" pattern="%level" isUnicode="false"/>
            <Column name="MESSAGE_LOG" pattern="%m" isUnicode="false"/>
            <Column name="EXCEPTION_LOG" pattern="%throwable" isUnicode="false"/>
        </JDBC>

    </Appenders>
    <Loggers>
        <Root level="error">
            <AppenderRef ref="file" level="DEBUG"/>
            <AppenderRef ref="stdout" level="INFO"/>
        </Root>
        <Logger name="lesson15.DataBaseTables.UserRolesDaoJdbcImpl" level="info" additivity="false">
            <AppenderRef ref="file2" level="INFO"/>
            <AppenderRef ref="stdout" level="INFO"/>
            <AppenderRef ref="db" level="INFO"/>
        </Logger>
    </Loggers>
</Configuration>